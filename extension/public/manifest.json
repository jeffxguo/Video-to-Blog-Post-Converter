{
    "manifest_version": 3,
    "name": "YouTube to Blog Converter",
    "version": "1.0.0",
    "description": "Convert YouTube videos to blog posts instantly.",
    "permissions": [
        "activeTab",
        "storage",
        "notifications"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    }
}